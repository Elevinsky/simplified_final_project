<div class="page-header">
  <h1>
    Schedule adjustments
    <a href="/schedule_adjustments/new" class="btn btn-lg btn-success">New Schedule adjustment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trainer</th>
        <th>Adjusted start</th>
        <th>Adjusted end</th>
        <th>Actions</th>
      </tr>

      <% @schedule_adjustments.each do |schedule_adjustment| %>
      <tr>
        <td>
          <% if schedule_adjustment.trainer.present? %>
            <a href="/trainers/<%= schedule_adjustment.trainer.id %>">
              <%= schedule_adjustment.trainer.name %>
            </a>
          <% end %>
        </td>
        <td><%= schedule_adjustment.adjusted_start %></td>
        <td><%= schedule_adjustment.adjusted_end %></td>
        <td>
          <a href="/schedule_adjustments/<%= schedule_adjustment.id %>" class="btn btn-primary">Show</a>
          <a href="/schedule_adjustments/<%= schedule_adjustment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_schedule_adjustment/<%= schedule_adjustment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @schedule_adjustments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
