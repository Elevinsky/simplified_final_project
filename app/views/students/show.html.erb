<div class="page-header">
  <h3>Student #<%= @student.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Role</dt>
      <dd><%= @student.role %></dd>

      <dt>Name</dt>
      <dd><%= @student.name %></dd>

      <dt>Email</dt>
      <dd><%= @student.email %></dd>

      <dt>Password</dt>
      <dd><%= @student.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/students" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Student has many lessons -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Lessons
      </li>

      <% @student.lessons.each do |lesson| %>
        <li class="list-group-item">
          <a href="/lessons/<%= lesson.id %>">
            <%= lesson.trainer_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/lessons/<%= lesson.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == lesson.student %>
              <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
