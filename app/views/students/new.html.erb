<!-- Validation failure messages -->
<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Student</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_student" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @student.name %>">
      </div>

      <!-- Label and input for pin -->
      <div class="form-group">
        <label for="pin" class="control-label">
          Pin
        </label>

        <input type="text" id="pin" name="pin" placeholder="Pin" class="form-control" value="<%= @student.pin %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @student.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Student
      </button>
      or
      <a href="/students">Cancel</a>
    </form>
  </div>
</div>
