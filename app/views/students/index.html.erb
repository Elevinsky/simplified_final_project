<div class="page-header">
  <h1>
    Students
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>

      <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @students, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
