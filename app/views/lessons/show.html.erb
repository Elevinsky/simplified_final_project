<div class="page-header">
  <h3>Lesson #<%= @lesson.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Trainer</dt>
      <dd>
        <% if @lesson.trainer.present? %>
          <a href="/trainers/<%= @lesson.trainer_id %>">
            <%= @lesson.trainer.name %>
          </a>
        <% end %>
      </dd>

      <dt>Lesson time</dt>
      <dd><%= @lesson.lesson_time %></dd>

      <dt>Student</dt>
      <dd>
        <% if @lesson.student.present? %>
          <a href="/students/<%= @lesson.student_id %>">
            <%= @lesson.student.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/lessons" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @lesson.student %>
        <a href="/lessons/<%= @lesson.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_lesson/<%= @lesson.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
