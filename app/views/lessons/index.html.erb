<div class="page-header">
  <h1>
    Lessons
    <a href="/lessons/new" class="btn btn-lg btn-success">New Lesson</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "lessons_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :checked_in_eq, "Checked in" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :checked_in_eq, "1", checked: ((params[:q] && params[:q][:checked_in_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :checked_in_eq, "0", checked: ((params[:q] && params[:q][:checked_in_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :checked_in_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :lesson_time, "Lesson time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='lesson_timegteqPicker'>
                  <%= f.text_field :lesson_time_gteq, :class => "form-control", :placeholder => "Lesson time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='lesson_timelteqPicker'>
                  <%= f.text_field :lesson_time_lteq, :class => "form-control", :placeholder => "Lesson time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#lesson_timegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#lesson_timelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#lesson_timegteqPicker').on("dp.change", function (e) {
                  $('#lesson_timelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#lesson_timelteqPicker').on("dp.change", function (e) {
                  $('#lesson_timegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :student_name_cont, "Student name contains" %>
      <%= f.text_field :student_name_cont, :class => "form-control", :placeholder => "Student name contains" %>
    </div>

<div class="form-group">
      <%= f.label :trainer_name_cont, "Trainer name contains" %>
      <%= f.text_field :trainer_name_cont, :class => "form-control", :placeholder => "Trainer name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/lessons" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#lessons_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Time</th>
        <th>Tuesday <%= Chronic.parse('this tuesday').strftime('%m/%e') %></th>
        <th>Wednesday <%= Chronic.parse('this wednesday').strftime('%m/%e') %></th>
        <th>Thursday <%= Chronic.parse('this thursday').strftime('%m/%e') %></th>
        <th>Friday <%= Chronic.parse('this friday').strftime('%m/%e') %></th>
        <th>Saturday <%= Chronic.parse('this saturday').strftime('%m/%e') %></th>
        <th>Sunday <%= Chronic.parse('this sunday').strftime('%m/%e') %></th>
      </tr>

      <% @lesson_options.each do |time| %>
      <tr>
        <td><%= time %></td>
        <td>
        <% @lessons.each do |lesson| %>
        <% if lesson.lesson_time == Chronic.parse('this tuesday 9:30') %>
        <a href="/trainers/<%= lesson.trainer.id %>">
          <%= lesson.student.name %>
          </a>
          <% end %>
          <% end %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>10:00</td>
        <td>
        <% @lessons.each do |lesson| %>
        <% if lesson.lesson_time == Chronic.parse('this tuesday 10:00') %>
        <a href="/trainers/<%= lesson.trainer.id %>">
          <%= lesson.trainer.name %>
          </a>
          <% end %>
          <% end %>
        </td>
      </tr>
      <% @lessons.each do |lesson| %>
      <tr>
        <td>
          <% if lesson.trainer.present? %>
            <a href="/trainers/<%= lesson.trainer.id %>">
              <%= lesson.trainer.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if lesson.student.present? %>
            <a href="/students/<%= lesson.student.id %>">
              <%= lesson.student.name %>
            </a>
          <% end %>
        </td>
        <td><%= lesson.lesson_time.strftime('%b %e, %I:%M %p %Z') %></td>
        <td><%= lesson.checked_in %></td>
        <td>
          <a href="/lessons/<%= lesson.id %>" class="btn btn-primary">Show</a>
          <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @lessons, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
