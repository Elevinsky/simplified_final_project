<!-- A Trainer has many schedule_adjustments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Schedule_adjustments
      </li>

      <% @trainer.schedule_adjustments.each do |schedule_adjustment| %>
        <li class="list-group-item">
          <a href="/schedule_adjustments/<%= schedule_adjustment.id %>">
            <%= schedule_adjustment.trainer_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/schedule_adjustments/<%= schedule_adjustment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/schedule_adjustments/<%= schedule_adjustment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_schedule_adjustment/<%= schedule_adjustment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_schedule_adjustment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for trainer_id -->
      <input type="hidden" name="trainer_id" value="<%= @trainer.id %>">

      <!-- Label and input for adjusted_start -->
      <div class="form-group">
        <label for="adjusted_start" class="control-label">
          Adjusted start
        </label>

        <input type="text" id="adjusted_start" name="adjusted_start" placeholder="Adjusted start" class="form-control" value="">
      </div>

      <!-- Label and input for adjusted_end -->
      <div class="form-group">
        <label for="adjusted_end" class="control-label">
          Adjusted end
        </label>

        <input type="text" id="adjusted_end" name="adjusted_end" placeholder="Adjusted end" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Schedule Adjustment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

