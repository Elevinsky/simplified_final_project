<div class="page-header">
  <h1>
    Breaks
    <a href="/breaks/new" class="btn btn-lg btn-success">New Break</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trainer</th>
        <th>Start</th>
        <th>End</th>
        <th>Actions</th>
      </tr>

      <% @breaks.each do |break| %>
      <tr>
        <td>
          <% if break.trainer.present? %>
            <a href="/trainers/<%= break.trainer.id %>">
              <%= break.trainer.name %>
            </a>
          <% end %>
        </td>
        <td><%= break.start %></td>
        <td><%= break.end %></td>
        <td>
          <a href="/breaks/<%= break.id %>" class="btn btn-primary">Show</a>
          <a href="/breaks/<%= break.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_break/<%= break.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @breaks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
