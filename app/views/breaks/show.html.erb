<div class="page-header">
  <h3>Break #<%= @break.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Trainer</dt>
      <dd>
        <% if @break.trainer.present? %>
          <a href="/trainers/<%= @break.trainer_id %>">
            <%= @break.trainer.name %>
          </a>
        <% end %>
      </dd>

      <dt>Start</dt>
      <dd><%= @break.start %></dd>

      <dt>End</dt>
      <dd><%= @break.end %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/breaks" class="btn btn-primary">
        Back
      </a>
      <a href="/breaks/<%= @break.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_break/<%= @break.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
